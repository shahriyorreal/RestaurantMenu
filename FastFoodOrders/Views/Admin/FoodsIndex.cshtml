@model FoodViewModel
@{
    ViewBag.Title = "Fast Food";

}
<a asp-controller="Admin" asp-action="CreateFood"  class="btn btn-dark">Create Food</a>
<div class="card-deck">
    @foreach (var food in Model.Foods)
    {
        var photoFilePath = "~/images/" + (food.PhotoFilePath ?? "burgericon.png");
        
        if (food.PhotoFilePath == "")
        {
            photoFilePath = "~/images/icons/burgericon.png";
        }
        
        <div class="card m-3" style="min-width:18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@food.Name</h3>
            </div>
            <img width="450" height="280" class="card-img-top" src="@photoFilePath" asp-append-version="true" />
            <div class="card-footer text-center">
                <h5 class="text-danger">@food.Price c</h5>
                <div>
                    <a asp-controller="Admin" asp-action="editfood" asp-route-Id="@food.Id" class="btn btn-outline-success">Edit</a>
                    <form asp-controller="Admin" asp-action="deletefood" asp-route-Id="@food.Id" method="post">
                        <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
                    </form>
                </div>
                
            </div>        
      </div>
    }
</div>
      
     