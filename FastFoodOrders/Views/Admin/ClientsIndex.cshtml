@model  ClientViewModel

@{
    ViewBag.Title = "Clients List";
}

<h4>@ViewBag.Title</h4>

<form>
    <button asp-controller="Admin" asp-action="CreateClients" class="btn btn-dark">Create Clients</button>
<table class="table table-responsive ">         
    </tbody>
</table>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Fullname</th>
                <th>Phone</th>
                <th class="w-25 p-3">Actions</th>
            </tr>
        </thead>
        <tbody id="table-body">
            
                @foreach (var clients in Model.Clients)
                {
                    <tr>
                        <td>@clients.Fullname</td>
                        <td>@clients.Phone</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-controller="Admin" asp-action="Edit" asp-route-id= "@clients.Id" class="btn btn-primary">Edit</a>
                                <a asp-controller="Admin" asp-action="Delete" asp-route-id="@clients.Id" class="btn btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>                     
                }      
        </tbody>
    </table>
</form>


